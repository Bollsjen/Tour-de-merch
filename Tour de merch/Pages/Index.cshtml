@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Turnéer</h1>
<a class="btn btn-primary" asp-page="CreateTurne">Create Turné</a>
<table class="table">
    <thead>
        <tr>
            <th>
               ID
            </th>
            <th>
                Title
            </th>
            <th>
                Start Dato
            </th>
            <th>
                Slut Dato
            </th>
            <th>
                Fortjeneste
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var turne in Model.Turneer.Values){
            <tr>
                <td>
                    <a asp-page="EditTurne" asp-route-id="@turne.ID">@turne.ID</a>
                </td>
                <td>
                    <a asp-page="EditTurne" asp-route-id="@turne.ID">@turne.Navn</a>
                </td>
                <td>
                    <a asp-page="EditTurne" asp-route-id="@turne.ID">@turne.TurneStart</a>
                </td>
                <td>
                    <a asp-page="EditTurne" asp-route-id="@turne.ID">@turne.TurneSlut</a>
                </td>
                <td>
                    <a asp-page="EditTurne" asp-route-id="@turne.ID">@turne.Fortjeneste</a>
                </td>
            </tr>
        }
    </tbody>
</table>
