@page
@model Tour_de_merch.Pages.Koncerter.IndexModel
@{
    ViewData["Title"] = "Koncert Katalog";
}

<h1>Koncerter</h1>
@*<a class="btn btn-primary" asp-page="CreateKoncert">Create Concert</a>*@
@*<h1 class="text-center">Create Concert</h1>*@
<h2><a class="btn" type="button" asp-page="CreateKoncert"><i class="fa fa-plus"></i> <b>Create Concert</b></a></h2>

<div>
    <table class="table">
        <thead class="">
            <tr>
                <th scope="col">
                    ID
                </th>
                <th scope="col">
                    Titel
                </th>
                <th scope="col">
                    Dato
                </th>
                <th scope="col">
                    By
                </th>
                <th scope="col">
                    Spille sted
                </th>
                <th scope="col">
                    Turné
                </th>
                <th scope="col">
                    Antal Items Solgt
                </th>
                <th scope="col">
                    Samlet Fortjeneste
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var koncert in Model.Koncerter.Values)
            {
                <tr>
                    <td scope="col">
                        @koncert.Id
                    </td>
                    <td scope="col">
                         @koncert.Title
                    </td>
                    <td scope="col">
                         @koncert.Date
                    </td>
                    <td scope="col">
                         @koncert.By
                    </td>
                    <td scope="col">
                         @koncert.Spillested
                    </td>
                    <td scope="col">
                         @koncert.Turne.Navn
                    </td>
                    <td scope="col">
                         nan
                    </td>
                    <td scope="col">
                         @koncert.Fortjeneste
                    </td>
                    <td>
                     <a asp-page="EditKoncert" asp-route-id="@koncert.Id" class="btn btn-success">Edit</a>
                    </td>
          
                </tr>
            }
            </tbody>
    </table>
</div>
